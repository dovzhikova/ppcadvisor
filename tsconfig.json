{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": ["api/**/*.ts", "lib/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
